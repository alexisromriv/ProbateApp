<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/card"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPreguntaItem"
                style="@style/h4"
                android:text="Pregunta" />

            <TextView
                android:id="@+id/tvRespuestaItem1"
                style="@style/subtitle"
                android:layout_marginTop="8dp"
                android:alpha=".5"
                android:text="Respuesta 1" />

            <TextView
                android:id="@+id/tvRespuestaItem2"
                style="@style/subtitle"                android:layout_marginTop="4dp"
                android:alpha=".5"
                android:text="Respuesta 3" />

            <TextView
                android:id="@+id/tvRespuestaItem3"
                style="@style/subtitle"
                android:layout_marginTop="4dp"
                android:alpha=".5"
                android:text="Respuesta 2" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>